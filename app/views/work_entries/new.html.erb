<div class="work-page-container">  
    <%= link_to "← Back to Work Day", work_day_path(@work_day), class: "btn btn-secondary mb-3" %>

    <h1>Add a New Work Entry</h1>

    <%= form_with model: [@work_day, @work_entry], local: true do |form| %>
    <div class="form-group mb-3">
        <%= form.label :raw_text, "Describe your activity or encounter:" %><br>
        <%= form.text_area :raw_text, class: "form-control", rows: 8, cols: 80, required: true %>
    </div>

    <div class="form-group">
        <%= form.submit "Save Entry", class: "btn add-button" %>
    </div>
    <% end %>
</div>
