<div class="dreams-page-container">  
  </br>
  <%= link_to "← Back to Saved Dreams", dreams_path, class: "btn btn-secondary" %>

  <h1>Add a New Dream</h1>

  <%= form_with model: @dream, local: true, class: "dream-form" do |form| %>
    <div class="form-group">
      <%= form.label :raw_text, "Describe Your Dream:" %><br>
      <%= form.text_area :raw_text, rows: 8, cols: 80, class: "dream-input" %>
    </div>

    <%= form.submit "Save Dream", class: "btn submit-button" %>
  <% end %>
</div>

