<div class="work-page-container">  
    <%= link_to "← Back to Work Journal", work_days_path, class: "btn btn-secondary" %>

    <h1>Add a New Work Day</h1>

    <%= form_with(model: @work_day, local: true) do |form| %>
    <% if @work_day.errors.any? %>
        <div id="error_explanation">
        <h2><%= pluralize(@work_day.errors.count, "error") %> prohibited this work_day from being saved:</h2>
        <ul>
            <% @work_day.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
        </ul>
        </div>
    <% end %>

    <div class="field">
        <%= form.label :entry_date %>
        <%= form.date_field :entry_date %>
    </div>

    </br> 

    <div class="field">
        <%= form.label :description %>
        <%= form.text_area :description, rows: 1, cols: 80, class: "work-input" %>
    </div>

    </br> 

    <div class="actions">
        <%= form.submit "Create Work Day", class: "btn add-button" %>
    </div>
    <% end %>
</div>
